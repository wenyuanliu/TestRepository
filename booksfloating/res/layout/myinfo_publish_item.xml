<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="horizontal" >
    
        <ImageView 
            android:id="@+id/iv_my_info_publish_book_image"
            android:layout_width="64dp"
            android:layout_height="91dp"
            android:src="@drawable/think_in_java"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tv_my_info_publish_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="think in java"
                android:textSize="15sp"
                />
            <TextView 
                android:id="@+id/tv_my_info_publish_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="作者: (美)埃克尔"
                android:textSize="12sp"
                />
            <TextView 
                android:id="@+id/tv_my_info_publish_book_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可借馆藏: 西安电子科技大学北校区"
                android:textSize="12sp"
                />
             <TextView 
                android:id="@+id/tv_my_info_publish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布时间: 2016年2月1日15时01分"
                android:textSize="12sp"
                />
            <TextView 
                android:id="@+id/tv_my_info_publish_book_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注: 希望好心人尽快帮我借到"
                android:textSize="12sp"
                />
        </LinearLayout>
    

</LinearLayout>
